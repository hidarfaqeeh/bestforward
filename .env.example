# إعدادات البوت الأساسية
BOT_TOKEN=your_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://postgres:your_password@postgres:5432/telegram_bot
DB_PASSWORD=your_secure_password_here

# إعدادات الويب هوك (اختيارية)
WEBHOOK_HOST=your-domain.com
WEBHOOK_PORT=5000

# إعدادات Docker
COMPOSE_PROJECT_NAME=telegram-forwarding-bot

# اختياري: إعدادات Webhook (للنشر على الخادم)
WEBHOOK_HOST=your-domain.com
# أو localhost للتطوير المحلي:
# WEBHOOK_HOST=localhost

# اختياري: Telegram API credentials للـ Userbot (للميزات المتقدمة)
API_ID=your_api_id
API_HASH=your_api_hash
STRING_SESSION=your_session_string

# اختياري: مفتاح التشفير (32 حرف)
ENCRYPTION_KEY=your-32-character-encryption-key

# اختياري: إعدادات إضافية
LOG_LEVEL=INFO
MAX_FORWARDING_DELAY=1
MAX_RETRIES=1
RETRY_DELAY=1